@model List<AuthorsDisplayVM>

@{
    ViewData["Title"] = "All Authors";
    var authors = Model;
}

<div class="text-center mb-3 row justify-content-center">
    <a asp-controller="News" asp-action="GetAllAdmin" class="btn btn-outline-primary col-3 me-3" >News</a>
    <a asp-action="Add" class="btn btn-outline-success col-3 ms-3" >Add Author</a>
</div>

<table class="table table-hover ">
    <thead>
        <tr class="align-start text-center">
            <th class="col-6">Name</th>
            <th class="col-6">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in authors)
        {
            <tr>
                <td class="text-center">
                    <p class="text-muted mb-0">@author.Name</p>
                </td>
                <td class="text-center">
                    <button class="d-inline me-2 border-0 bg-transparent "><a asp-action="Edit" asp-route-id="@author.Id" class="btn btn-outline-primary border-0 fs-5"><i class="bi bi-pencil-square"></i></a> </button>
                    <form asp-action="Delete" asp-route-id="@author.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger border-0 fs-5" onclick=" return confirm('Delete @author.Name ?')"><i class="bi bi-person-dash"></i></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>